    <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        <div>
          
          <div class="form-group"><%= f.label :email %><br />
          <%= f.email_field :email, :class => 'form-control', :placeholder => 'enter password', :autofocus => true %></div>
        
          <div class="form-group"><%= f.label :password %> <em>(minimum 8 character)</em><br />
          <%= f.password_field :password, :class => 'form-control', :placeholder => 'enter password' %></div>
        
          <div class="form-group"><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'enter password' %></div>
          
          <div class="form-group">
            <%= f.label :registration_code %> <em>*</em><br />
            <%= f.text_field :reg_code, :class => 'form-control', :placeholder => 'enter registration code' %>
          </div>
        
          <div class="text-right">
            <%= f.submit "Sign up for Entreuse", class: 'btn btn-xs btn-basic' %>
          </div>
          </div>
        <% end %>
        
        
          
    </div>
    
    <div class="panel-footer request-registration-code">
          <p><em>*</em> If you do not have a Registration Code and would like one, please request a Registration Code <strong><%= link_to "here.", "http://eepurl.com/MjSBv" %></strong></p>
        </div>


