          <div class="panel-body">
            <div class="form-group">
            
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                
                <div>
                  <%= f.label :email %><br />
                  <%= f.email_field :email, :class => 'form-control', :placeholder => 'enter email', :autofocus => true %>
                </div>
            
            </div>
            
            <div class="form-group">
            
              <div>
                <%= f.label :password %><br />
                <%= f.password_field :password, :class => 'form-control form-field-inline', :placeholder => 'enter password' %>
                
                <%= f.submit "Sign in", class: 'btn btn-basic btn-xs sumbit-inline' %>
              </div>
        
              <div>
                
              </div>
            
            </div>
                <% if devise_mapping.rememberable? -%>
                  <div>
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>  
                  </div>
                <% end -%>
  
              <% end %>
          </div>
          

